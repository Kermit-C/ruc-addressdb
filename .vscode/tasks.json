{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Compile Address DB",
            "command": "/usr/bin/clang",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-o",
                "./dist/addressdb",
                "./src/main.c",
                "./src/client.c",
                "./src/io.c",
                "./src/schema.c",
                "./src/operate.c"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译"
        }
    ],
    "version": "2.0.0"
}